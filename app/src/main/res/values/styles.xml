<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fragmentGame_textView_playerName">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textSize</item>
    </style>

    <style name="fragmentGame_textView_result">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textSize</item>
    </style>

    <style name="fragmentTableResult_textView_playerName">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fragmentTableResult_textView_finalResult">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fragmentTableResult_textView_result">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textSize</item>
    </style>

    <style name="fragmentNewGame_textView_playerNameSettingTitle">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_setting_textSize</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="confirm_exit_title">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/title_textSize</item>
    </style>

    <style name="confirm_exit_message">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/title_textSize</item>
    </style>
</resources>
